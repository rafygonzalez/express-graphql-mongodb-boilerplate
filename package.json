{
  "name": "express-graphql-mongodb-boilerplate",
  "version": "0.0.1",
  "description": "A boilerplate for Node.js apps / GraphQL (Apollo Server) / Authentication from Scratch / MongoDB",
  "main": "./src",
  "scripts": {
    "start": "cross-env NODE_ENV=production NODE_PATH=./src node ./src",
    "start:local": "cross-env NODE_ENV=development NODE_PATH=./src nodemon ./src",
    "lint": "eslint --debug ./src",
    "lint:fix": "eslint --debug ./src --fix",
    "prettier": "prettier \"**/*.+(js|jsx|json|css|md)\"",
    "prettier:fix": "prettier --write \"**/*.+(js|jsx|json|css|md)\""
  },
  "author": "Rafael Gonzalez",
  "license": "MIT",
  "dependencies": {
    "apollo-server": "^2.19.1",
    "apollo-server-express": "^2.19.1",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "crypto-random-string": "^3.3.0",
    "ejs": "^3.1.5",
    "email-templates": "^8.0.2",
    "express": "^5.0.0-alpha.8",
    "express-graphql": "^0.12.0",
    "graphql": "^15.4.0",
    "i18next": "^19.8.4",
    "i18next-express-middleware": "^2.0.0",
    "jsonwebtoken": "^8.5.1",
    "module-alias": "^2.2.2",
    "moment": "^2.29.1",
    "mongoose": "^5.11.6",
    "nodemailer": "^6.4.16",
    "validator": "^13.5.2",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "dotenv": "^8.2.0",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^6.14.0",
    "eslint-plugin-prettier": "^3.1.4",
    "prettier": "^2.2.1"
  }
}
